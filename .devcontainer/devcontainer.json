{
	"name": "Python 3",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"runArgs": [
		"--privileged",
		"-v","/tmp/.X11-unix:/tmp/.X11-unix:ro",
        "--env","DISPLAY=${localEnv:DISPLAY}",
		"--env","QT_X11_NO_MITSHM=1"
	],
	"initializeCommand": "xhost +",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"charliermarsh.ruff"
			]
		}
	}
}
